ul.next-action-card {
    list-style: none;
    margin: 0;
    padding: 0.75rem;
    display: flex;
    flex-flow: row wrap;
    justify-content: space-between;
    height: 100%;
    li {
        margin-bottom: 0.75rem;
        button {
            border: none;
            background: #aaa;
            color: #fff;
            width: 6rem;
            height: 6rem;
            font-size: 0.75rem;
            img {
              width: 0.75rem;
              height: 0.75rem;
            }
            &[disabled] {
                background: #ccc;
                color: #666;
                &:hover {
                    background: #ccc;
                    color: #666;
                }
            }
            p {
                font-size: 0.75rem;
                margin: 0;
                padding: 0;
                line-height: 0.75rem;
            }
            &:hover {
                background: #337ab7;
            }
        }
    }
}

.next-action-card:after {
    content: "";
    flex: auto;
}

.next-action-card.alert {
    h4 {
        margin-top: 10px;
        margin-bottom: 10px;
        text-align: center;
    }
}
